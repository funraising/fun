  "engines": {
    "node": "20"
  },
  "scripts": {
    "test": "npm run lint && hardhat test",
    "start": "hardhat node --export deployment-localhost.json",
    "compile": "hardhat compile",
    "format": "prettier --write contracts/**/*.sol test/**/*.js",
